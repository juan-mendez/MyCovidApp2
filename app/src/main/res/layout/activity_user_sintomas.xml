<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/galleryItemBackground"
    tools:context=".UserSintomas">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="329dp"
        android:layout_height="242dp"
        android:layout_marginTop="95dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nombre"
                android:text=" Nombre:"
                android:textColor="#FFFFFF"
                android:textColorHint="#A9FBF8F8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_cedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cedula"
                android:text=" Cedula:"
                android:textColor="#FFFFFF"
                android:textColorHint="#A9FBF8F8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Edad"
                android:text=" Edad: "
                android:textColor="#FFFFFF"
                android:textColorHint="#A9FBF8F8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Telefono"
                android:text=" Telefono:"
                android:textColor="#FFFFFF"
                android:textColorHint="#A9FBF8F8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_zona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Zona"
                android:text=" Localidad:"
                android:textColor="#FFFFFF"
                android:textColorHint="#A9FBF8F8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sintomas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Sintomas:"
                android:textColor="#FFFFFF"
                android:textColorHint="#A9FBF8F8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_S1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" "
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A6FFFFFF" />

                <TextView
                    android:id="@+id/txt_S2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" "
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A6FFFFFF" />

                <TextView
                    android:id="@+id/txt_S3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A6FFFFFF" />

                <TextView
                    android:id="@+id/txt_S4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A6FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_S5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A6FFFFFF" />

                <TextView
                    android:id="@+id/txt_S6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A6FFFFFF" />

                <TextView
                    android:id="@+id/txt_S7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A6FFFFFF" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="Estado"
                android:text=" Estado:"
                android:textColor="#FFFFFF"
                android:textColorHint="#A6FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/border"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/txt_examen"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="#FFFEFE" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="157dp"
        android:layout_height="139dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="259dp"
        android:layout_height="36dp"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_reportar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:text="Reportar" />

        <Button
            android:id="@+id/btn_notificar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:text="Notificar" />

        <Button
            android:id="@+id/btn_citar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:text="Citar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>